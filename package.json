{
  "name": "gluer",
  "version": "1.0.0",
  "description": "Merge content from files into a single output file using Bun",
  "bin": {
    "gluer": "./src/gluer"
  },
  "scripts": {
    "build": "bun build src/gluer.ts --compile --outfile dist/gluer",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "type:check": "tsc --noEmit"
  },
  "keywords": [
    "bun",
    "cli",
    "merge",
    "files",
    "typescript"
  ],
  "author": "Youtix",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@vitest/coverage-v8": "3.1.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
